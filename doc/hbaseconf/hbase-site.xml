<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>

    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://rsong:9000/hbase</value>
    </property>

    <property>
        <name>hbase.temp.dir</name>
        <value>/home/rsong/hbase/tmp</value>
    </property>

    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>rsong</value>
    </property>

    <property>
        <name>hbase.zookeeper.property.dataDir</name>
        <value>/home/rsong/hase/zookeeper</value>
    </property>

</configuration>
